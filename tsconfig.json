{
  "declarationDir": "types",
  "compilerOptions": {
    "sourceMap": true,
    "target": "es2021",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmitOnError": true,
    "lib": ["es2021", "dom", "DOM.Iterable"],
    "strict": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "inlineSources": true,
    "rootDir": "./src",
    "incremental": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"]
}
